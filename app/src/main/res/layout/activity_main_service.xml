<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.deepanshu.carcare.main_service">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/date_service"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="Date: 23/11/2016"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/odometer"
        android:layout_below="@+id/date_service"
        android:layout_alignRight="@+id/date_service"
        android:layout_alignEnd="@+id/date_service"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Odometer"/>

    <Spinner
        android:id="@+id/service_type"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/odometer"
        android:layout_alignLeft="@+id/odometer"
        android:layout_alignStart="@+id/odometer"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/service_cost"
        android:layout_below="@+id/service_type"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/odometer"
        android:layout_alignEnd="@+id/odometer"
        android:hint="Service Cost(Rs.)"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/submit_service"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        />


</RelativeLayout>
